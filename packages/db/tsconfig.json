{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "target": "ES2020",
    "declaration" : true,
    "moduleResolution" : "NodeNext",
    "esModuleInterop": true,                  
    "allowSyntheticDefaultImports": true,     
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true, 
    "isolatedModules": true,
    "strict": true,
  },
  "include": ["*.ts"]
}
